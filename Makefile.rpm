version=1.0.1
release=10
name=pcap_api

pname=$(name)-$(version)
tarball=$(pname)-$(release).tar.gz
tmpdir=/tmp/pkg
workdir=$(tmpdir)/$(pname)

rpm:
	aclocal
	autoheader
	autoconf
	automake -a
	./configure
	make dist
	rpmbuild --sign -tb $(tarball)

clean:
	rm -f $(tarball) $(HOME)/rpm/SOURCES/$(tarball)
